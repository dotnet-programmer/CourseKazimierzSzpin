@using InvoiceManager.WebApp.NetFramework.Models.ViewModels

@model RegisterViewModel

@{
    ViewBag.Title = "Register";
    string test1 = "asdf";
}

<main aria-labelledby="title">
	<h2 id="title">@ViewBag.Title.</h2>

	<!-- INFO - wyświetlenie modelu przekazanego do widoku -->
	@*<div>
			@Model.Email
		</div>*@

	@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
	@Html.AntiForgeryToken()
	<h4>Create a new account. @test1</h4>
	<hr />
	@Html.ValidationSummary("", new { @class = "text-danger" })
	<div class="row mb-2">
		<!-- INFO - m oznacza odwołanie do modelu RegisterViewModel -->
		@Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
		</div>
	</div>
	<div class="row mb-2">
		@Html.LabelFor(m => m.Password, new { @class = "col-md-2 col-form-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
		</div>
	</div>
	<div class="row mb-2">
		@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 col-form-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
		</div>
	</div>
	<div class="row mb-2">
		@Html.LabelFor(m => m.Name, new { @class = "col-md-2 col-form-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
		</div>
	</div>
	<div class="row mb-2">
		@Html.LabelFor(m => m.Address.PostalCode, new { @class = "col-md-2 col-form-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Address.PostalCode, new { @class = "form-control" })
		</div>
	</div>
	<div class="row mb-2">
		@Html.LabelFor(m => m.Address.City, new { @class = "col-md-2 col-form-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Address.City, new { @class = "form-control" })
		</div>
	</div>
	<div class="row mb-2">
		@Html.LabelFor(m => m.Address.Street, new { @class = "col-md-2 col-form-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Address.Street, new { @class = "form-control" })
		</div>
	</div>
	<div class="row mb-2">
		@Html.LabelFor(m => m.Address.Number, new { @class = "col-md-2 col-form-label" })
		<div class="col-md-10">
			@Html.TextBoxFor(m => m.Address.Number, new { @class = "form-control" })
		</div>
	</div>
	<div class="row mb-2">
		<div class="offset-md-2 col-md-10">
			<input type="submit" value="Register" class="btn btn-outline-dark" />
		</div>
	</div>
    }
</main>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}