@model IEnumerable<Advertisement>

<div id="advertisementsTable">
	<table class="table table-bordered table-striped mt-3">
		<thead class="table-dark">
			<tr>
				<th scope="col">Zdjęcie</th>
				<th scope="col">Tytuł</th>
				<th scope="col">Opis</th>
				<th scope="col">Cena</th>
				<th scope="col">Wygasa</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Any())
			{
				foreach (var advertisement in Model)
				{
					<tr>
						<td>
							<img src="data:@advertisement.PictureFormat;base64,@advertisement.Picture">
						</td>
						<td>
@* 							@Html.ActionLink(
								advertisement.Title, 
								"Advertisement", 
								"Advertisement", 
								new { advertisementId = advertisement.AdvertisementId }, 
								new { @class = "fw-bold" }) *@
							<a class="fw-bold" asp-controller="Advertisement" asp-action="Advertisement" asp-route-advertisementId="@advertisement.AdvertisementId">@advertisement.Title</a>
						</td>
						<td>@advertisement.Description</td>
						<td>@advertisement.Price</td>
						<td>@advertisement.Expiration.ToString("G")</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td class="text-center" colspan="5">
						Brak ogłoszeń do wyświetlenia!
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>