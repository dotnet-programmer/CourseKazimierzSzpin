@page
@model RegisterConfirmationModel

@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Kliknij tutaj, żeby potwierdzić swoje konto: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Potwierdzenie</a>
        </p>
    }
    else
    {
        <p>
            Sprawdź swoją skrzynkę pocztową, aby potwierdzić swoje konto. Jeśli nie otrzymałeś wiadomości e-mail, sprawdź folder spam.
        </p>
    }
}